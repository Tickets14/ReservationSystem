<NavLayout>:
    name: 'Navigationrail'
    AKNavigationrail:
        id: rail
        navigation_bg_color: get_color_from_hex(app.colors(1))
        item_radius: "50dp"

        AKNavigationrailCustomItem:
            size_hint_y: None
            height: dp(60)
            padding: dp(5)

        AKNavigationrailItem:
            text: 'Shop'
            icon: 'shopping'
            active_text_color: rgba('#442c2e')
            icon_color: rgba('#442c2e')
            active_icon_color: rgba('#442c2e')

        AKNavigationrailItem:
            text: 'Cart'
            icon: 'cart'
            active_text_color: rgba('#442c2e')
            icon_color: rgba('#442c2e')
            active_icon_color: rgba('#442c2e')

        AKNavigationrailItem:
            text: 'Settings'
            icon: 'cog'

            active_text_color: rgba('#442c2e')
            icon_color: rgba('#442c2e')
            active_icon_color: rgba('#442c2e')

        AKNavigationrailCustomItem:

        AKNavigationrailContent:
            ScreenManager:
                id: manage
                Home:
                    id: home
                    name: 'home'

